<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dut.duttake_away">

    <!-- 允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 获取GSM（2g）、WCDMA（联通3g）等网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 获取sd卡写的权限，用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 允许读取手机状态 用于创建BmobInstallation -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="大工外卖"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyAppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/MyAppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/MyAppTheme" />

        <provider
            android:name="cn.bmob.v3.util.BmobContentProvider"
            android:authorities="com.dut.duttake_away.BmobContentProvider" />

        <activity android:name=".PersonalInfoActivity" />
        <activity android:name=".ManageAddressActivity" />
        <activity android:name=".ChangePasswordActivity" />
        <activity android:name=".OrderActivity" />
        <activity android:name=".CommentActivity" />
        <activity android:name=".MakeCommentActivity" />
        <activity android:name=".NetworkActivity"></activity>
        <activity android:name=".StoreActivity" android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".DishActivity" />
        <activity android:name=".CheckActivity" />
    </application>

</manifest>